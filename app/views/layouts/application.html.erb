     <link href="./img/favicon.ico" rel="icon" />
  </head>

  <body class="home blog custom-background wp-custom-logo wp-embed-responsive site-loaded sidebar-left">
    <%= yield %>
    <script src="./js/jquery.min.js"></script>
    <script src="./js/bootstrap.min.js"></script>
   
  </body>
</html>
